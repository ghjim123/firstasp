@using firstasp.Models;
@inject PrjDbContext _context;

<main id="main">

    <section id="content_edit" class="content_edit">
        <div class="container" id="User">
            <div class="col-md-12">
                <div class="section-header d-flex justify-content-between align-items-center mb-5">
                    <h2>文章編輯</h2>
                </div>
                <div class="row justify-content-center mt-5">
                    <div class="col-lg-12" id="form_sign">
                        <div class="row">
                            @{
                                <form asp-action="Article_Editer" asp-controller="User" method="post" enctype="multipart/form-data">

                                    <div class="col-lg-12 mb-3">
                                        <label for="edit_title">標題</label>
                                        <input type="text" class="form-control" id="edit_title" name="edit_title" autofocus required value="@Model.ArticleTitle">
                                    </div>
                                    <div class="col-12 mb-3">
                                        <label for="edit_content">內容</label>
                                        <textarea class="form-control" id="edit_content" name="edit_content" cols="30" rows="10">@Model.ArticleContent</textarea>
                                    </div>
                                    <div class="col-12">
                                        <input type="file" name="formFile">
                                        <input type="hidden" class="form-control" id="edit_category" name="edit_category" value="@Model.ArticleCategory">
                                        <input type="hidden" class="form-control" id="edit_user" name="edit_user" value="@User.Identity.Name">
                                        <input type="hidden" class="form-control" id="edit_oldtitle" name="edit_oldtitle" value="@Model.ArticleTitle">
                                        <input type="reset" class="btn btn-primary" value="重新編輯">
                                        <input type="submit" class="btn btn-primary" value="儲存">
                                    </div>
                                    <div class="d-md-flex post-entry-2 small-img">
                                        <img class="img-fluid" src="~/images/User/@Model.UserId/@Model.PhotoName" width="300px">
                                    </div>
                                </form>
                                }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</main>