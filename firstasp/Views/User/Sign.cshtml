@model firstasp.Models.UserTable

<main id="main">

    <section id="Sign" class="Sign">
        <div class="container" id="Sign">
            <div class="col-md-12">
                <div class="section-header d-flex justify-content-between align-items-center mb-5">
                    <h2>註冊</h2>
                </div>
                <div class="row justify-content-center mt-5">
                    <div class="col-lg-4" id="form_sign">
                        <div class="row">
                            @using (Html.BeginForm("Sign", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                <div class="col-lg-12 mb-3">
                                    @Html.LabelFor(model => model.UserEmail)
                                    @Html.TextBoxFor(model => model.UserEmail, "", new {@class="form-control",@autofocus="true"})
                                    @Html.ValidationMessageFor(model => model.UserEmail, "", new {@class="text-danger"})
                                </div>
                                <div class="col-lg-12 mb-3">
                                    @Html.LabelFor(model => model.UserId)
                                    @Html.TextBoxFor(model => model.UserId, "", new {@class="form-control"})
                                    @Html.ValidationMessageFor(model => model.UserId, "", new {@class="text-danger"})
                                </div>
                                <div class="col-lg-12 mb-3">
                                    @Html.LabelFor(model => model.UserPwd)
                                    @Html.PasswordFor(model => model.UserPwd, new {@class="form-control"})
                                    @Html.ValidationMessageFor(model => model.UserPwd, "", new {@class="text-danger"})
                                </div>
                                <div class="col-12">
                                    <a href="~/User/Login" id="tologin" class="btn btn-primary">已有帳號</a>
                                    <input type="submit" class="btn btn-primary" value="註冊">
                                    <p class="text-danger">@ViewBag.message</p>
                                </div>
                                }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</main>