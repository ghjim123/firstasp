
<main id="@ViewBag.article_categary">

    <section id="content_edit" class="content_edit">
        <div class="container" id="@ViewBag.article_categary">
            <div class="col-md-12">
                <div class="section-header d-flex justify-content-between align-items-center mb-5">
                    <h2>新增文章</h2>
                </div>
                <div class="row justify-content-center mt-5">
                    <div class="col-lg-12" id="form_sign">
                        <div class="row">
                            <form asp-action="Poster" asp-controller="Category" method="post" enctype="multipart/form-data">
                                <div class="col-lg-12 mb-3">
                                    <label for="poster_title">標題</label>
                                    <input type="text" class="form-control" id="poster_title" placeholder="title" name="article_title" autofocus required>
                                </div>
                                <div class="col-12 mb-3">
                                    <label for="poster_content">內容</label>
                                    <textarea class="form-control" id="poster_content" name="article_content" placeholder="Enter something." cols="30" rows="10"></textarea>
                                </div>
                                <div class="col-12">
                                    <input type="file" name="formFile">
                                    <input type="hidden" class="form-control" id="poster_category" name="Category_key" value="@ViewBag.article_categary">
                                    <input type="hidden" class="form-control" id="poster_category" name="user_id" value="@User.Identity.Name">
                                    <input type="reset" class="btn btn-primary" value="重新編輯">
                                    <input type="submit" class="btn btn-primary" value="儲存">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</main>